#lang racket
(require rackunit
         rackunit/gui
         (prefix-in switch: "../switch.rkt"))

; aliasses & abstrations
(define switch% switch:switch%)
(define connection%
  (class object%
    (super-new)
    (define/public (set-switch-position! id new-state) #t)))
(define switch$
  (new switch% (connection (new connection%)) (id 'test) (state 'test)))

; individual test suites
(define test-new
  (test-suite "testing new"
              (test-case "check 'switch%' exists"
                         (check-not-exn (λ () switch%)))
              (test-case "check constructor doesn't error"
                         (check-not-exn (λ () switch$)))
              ))

(define test-get-state
  (test-suite "testing get-state"
              (test-case "check 'get-state' returns"
                         (check-true (symbol? (send switch$ get-state))))
              ))

(define test-set-state!
  (test-suite "testing set-state"
              (test-case "check 'set-state!' doesn't error"
                         (check-not-exn (λ () (send switch$ set-state! 'n))))
              ))

; running all test suites
(define all-tests
  (test-suite "All switch% operation tests"
              test-new
              test-get-state
              test-set-state!
              ))
(test/gui all-tests)